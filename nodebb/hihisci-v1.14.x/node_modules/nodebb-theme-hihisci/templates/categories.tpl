<!--轮播样式-->
<style>
	.banner {
		position: relative;
		/*相对定位 给绝对定位位置参考*/
		width: 848px;
		height: 296px;
	}

	.banner .item {
		display: none;
		/*隐藏元素*/
		position: absolute;
		/* 绝对定位*/
		width: 848px;
		height: 296px;
	}

	ul {
		list-style-type: none;
		/*清除默认列表样式 ....*/
		margin: 0;
		padding: 0;
		/*内外边距清除*/
	}


	/*左右按钮的属性设置*/
	.lr-tab .btn {
		position: absolute;
		top: 148px;
		width: 38px;
		height: 38px;
	}

	.btn {
		padding: 3px 3px;
	}

	.lr-tab .left {
		left: 0px;
		background-position-x: -83px;
		background: url("./assets/uploads/image/chevron-left.png");


	}

	.lr-tab .right {
		right: 0px;
		background-position-x: -125px;
		background: url("./assets/uploads/image/chevron-right.png");
	}


	/*圆形按钮属性设定*/
	.tab-btn {
		position: absolute;
		right: 20px;
		bottom: 0px;
		width: 100px;
		height: 30px;

	}

	.tab-btn .btn {
		float: left;
		width: 1px;
		height: 1px;
		background: #868686;
		border: 2px solid #c3c3c3;
		/*边框*/
		margin-left: 10px;
		border-radius: 50%;

	}

	/*圆形按钮触碰事件*/
	.tab-btn .btn:hover {
		background: #e4e4e4;
		border-color: #7f7f7f;

	}

	.tab-btn .active {
		background: #e4e4e4;
		border-color: #7f7f7f;

	}
</style>

<!-- IMPORT partials/breadcrumbs.tpl -->
<div data-widget-area="header">
	<!--轮播图-->
	<div style="display: flex;flex-direction: row;" class="visible-md-8 hidden-xs">
		<div class="banner">

			<div class="img-wrap">
				<ul>
					<li class="item" style="display: block">
						<img src="./assets/uploads/image/banner_1.jpg" class="lunbo">
					</li>
					<li class="item">
						<img src="./assets/uploads/image/banner_2.jpg" class="lunbo">
					</li>
					<li class="item">
						<img src="./assets/uploads/image/banner_3.jpg" class="lunbo">
					</li>
				</ul>
			</div>

			<div class="lr-tab">
				<div class="left btn"></div>
				<div class="right btn"></div>
			</div>
			<div class="tab-btn">
				<ul>
					<li class="btn"></li>
					<li class="btn"></li>
					<li class="btn"></li>
				</ul>
			</div>
		</div>
		<!--三维地球-->
		<div style="position: relative;left:20px;" class="hidden-md">
			<iframe style="width:100%;height:100%;" src="https://threejs.org/examples/misc_controls_fly.html"
				frameborder="0"></iframe>
		</div>
	</div>
	{{{each widgets.header}}}
	{{widgets.header.html}}
	{{{end}}}


</div>
<div class="row">
	<div
		class="<!-- IF widgets.sidebar.length -->col-lg-9 col-sm-12<!-- ELSE -->col-lg-12<!-- ENDIF widgets.sidebar.length -->">
		<h1 class="categories-title">[[pages:categories]]</h1>
		<ul class="categories" itemscope itemtype="http://www.schema.org/ItemList">
			{{{each categories}}}
			<!-- IMPORT partials/categories/item.tpl -->
			{{{end}}}
		</ul>
	</div>
	<div data-widget-area="sidebar"
		class="col-lg-3 col-sm-12 <!-- IF !widgets.sidebar.length -->hidden<!-- ENDIF !widgets.sidebar.length -->">
		{{{each widgets.sidebar}}}
		{{widgets.sidebar.html}}
		{{{end}}}
	</div>
</div>
<div data-widget-area="footer">
	{{{each widgets.footer}}}
	{{widgets.footer.html}}
	{{{end}}}
</div>


<!--轮播JS-->
<script>
	window.addEventListener('load', function () {
		var i = 0;/*初始化一个变量指向下标*/
		//点击点
		$(".tab-btn .btn").click(function () {
			i = $(this).index();//获取点击该元素下标
			$(this).addClass("active").siblings().removeClass("active");
			$(".item").eq(i).fadeIn().siblings().fadeOut();
		});

		//点击切换效果
		$(".lr-tab .right").click(function () {
			i++;
			if (i > 2) { i = 0; }
			$(".item").eq(i).fadeIn().siblings().fadeOut();
			$(".tab-btn .btn").eq(i).addClass("active").siblings().removeClass("active");
		});

		$(".lr-tab .left").click(function () {
			i--;
			if (i < 0) { i = 2; }
			$(".item").eq(i).fadeIn().siblings().fadeOut();
			$(".tab-btn .btn").eq(i).addClass("active").siblings().removeClass("active");
		});
		var time2 = setInterval(function () {
			i++;
			if (i > 2) { i = 0; }
			$(".item").eq(i).fadeIn().siblings().fadeOut();
			$(".tab-btn .btn").eq(i).addClass("active").siblings().removeClass("active");
		}, 6000); //定时器 重复

	})

</script>